---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Skill from "../components/Skill.astro";
import { Image } from "astro:assets";
import profileImage from "../assets/profile.jpg";
---

<Layout>
  <main
    class="min-h-screen bg-gradient-to-br from-slate-900 via-zinc-900 to-slate-800 relative overflow-hidden"
  >
    {/* Hero Section */}
    <section
      id="about"
      class="relative overflow-hidden min-h-screen flex items-center bg-[#0a0a0a]"
    >
      {/* Background Pattern */}
      <div class="absolute inset-0 opacity-[0.03]">
        <div class="absolute inset-0 bg-[url('/noise.svg')] opacity-20"></div>
      </div>

      <div class="container mx-auto px-6 z-10 relative">
        <div
          class="flex flex-col lg:flex-row items-center justify-between gap-12"
        >
          {/* Content Section */}
          <div class="flex-1 text-left space-y-8">
            {/* Status Badge */}
            <div
              class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-green-500/10 border border-green-500/20 animate-on-load animate-fadeInUp delay-100"
            >
              <span class="relative flex h-2 w-2">
                <span
                  class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-500 opacity-75"
                ></span>
                <span
                  class="relative inline-flex rounded-full h-2 w-2 bg-green-500"
                ></span>
              </span>
              <span
                class="text-xs font-medium text-green-500 tracking-wide uppercase"
                >Available for work</span
              >
            </div>

            {/* Main Heading */}
            <div class="space-y-2">
              <h1
                class="text-6xl lg:text-8xl font-bold tracking-tight text-white animate-on-load animate-fadeInUp delay-200"
              >
                FullStack
              </h1>
              <h1
                class="text-6xl lg:text-8xl font-bold tracking-tight text-green-500 animate-on-load animate-fadeInUp delay-300"
              >
                Developer
              </h1>
            </div>

            {/* Description */}
            <p
              class="text-lg text-gray-400 max-w-xl leading-relaxed animate-on-load animate-fadeInUp delay-400"
            >
              I'm Fullstack Developer building modern web applications.
            </p>

            {/* Buttons */}
            <div
              class="flex flex-wrap gap-4 animate-on-load animate-fadeInUp delay-500"
            >
              <a
                href="#project"
                class="btn bg-green-500 hover:bg-green-600 text-black border-none rounded-lg px-8 py-3 font-medium capitalize flex items-center gap-2 group"
              >
                View Projects
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-4 w-4 transition-transform group-hover:translate-x-1"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </a>
              <a
                href="#contact"
                class="btn btn-outline border-white/20 text-white hover:bg-white/10 hover:border-white/30 rounded-lg px-8 py-3 font-medium capitalize"
              >
                Contact Me
              </a>
            </div>
          </div>

          {/* Image Section */}
          <div
            class="flex-1 flex justify-center lg:justify-end animate-on-load animate-fadeInRight delay-400 relative"
          >
            {/* Code Card Overlay */}
            <div
              class="absolute -bottom-10 -left-10 z-20 bg-[#1a1a1a]/90 backdrop-blur-xl p-4 rounded-xl border border-white/10 shadow-2xl max-w-xs transform -rotate-3 hover:rotate-0 transition-transform duration-300"
            >
              <div class="flex gap-1.5 mb-3">
                <div class="w-2.5 h-2.5 rounded-full bg-red-500"></div>
                <div class="w-2.5 h-2.5 rounded-full bg-yellow-500"></div>
                <div class="w-2.5 h-2.5 rounded-full bg-green-500"></div>
              </div>
              <div class="font-mono text-xs leading-relaxed">
                <p>
                  <span class="text-purple-400">const</span>
                  <span class="text-blue-400">dev</span>
                  <span class="text-white">=</span>
                  <span class="text-yellow-400">{`{`}</span>
                </p>
                <p class="pl-4">
                  <span class="text-red-400">name:</span>
                  <span class="text-green-400">'Earth'</span>,
                </p>
                <p class="pl-4">
                  <span class="text-red-400">role:</span>
                  <span class="text-green-400">'Fullstack'</span>,
                </p>
                <p class="pl-4">
                  <span class="text-red-400">green_tea:</span>
                  <span class="text-orange-400">true</span>
                </p>
                <p><span class="text-yellow-400">{`}`}</span>;</p>
              </div>
            </div>

            <div
              class="relative w-80 h-[28rem] lg:w-96 lg:h-[32rem] rounded-2xl overflow-hidden shadow-2xl border border-white/10 transition-all duration-500"
            >
              <Image
                src={profileImage}
                alt="Developer Workspace"
                class="w-full h-full object-cover"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"
              >
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Project Section */}
    <section id="project" class="py-20 bg-[#050505]">
      <div class="container mx-auto px-6">
        {/* Section Header */}
        {/* Section Header */}
        <div class="mb-12 flex items-end justify-between">
          <div>
            <h2 class="text-4xl lg:text-5xl font-bold text-white mb-2">
              Featured <span class="text-green-500">Work</span>
            </h2>
            <div class="h-1.5 w-20 bg-green-500 rounded-full"></div>
          </div>
          <a
            href="/projects"
            class="hidden sm:flex items-center gap-2 text-gray-400 hover:text-white transition-colors group"
          >
            View All
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 transition-transform group-hover:translate-x-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
        {/* Projects Grid */}
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto"
        >
          <Card
            name="NextMart"
            desc="E-Commerce platform built with Next.js and Django, featuring modern UI and JWT authentication method."
            skill1="Next.js"
            skill2="Django"
            github="https://github.com/heartnet123/ecommerce-nextmart"
            image="/projects/nextmart.png"
          />
          <Card
            name="BookCube"
            desc="A platform for managing and discovering books, built with Django and PostgreSQL."
            skill1="Django"
            github="https://github.com/heartnet123/BookCube"
            image="/projects/bookcube.png"
          />
          <Card
            name="Home Kitchen Inventory Management"
            desc="An application to manage kitchen inventory, built with Tauri, SvelteKit, and SQLite."
            skill1="Tauri"
            skill2="SvelteKit"
            github="https://github.com/heartnet123/kitcheninventory"
            image="/projects/kitchen.png"
          />
        </div>
      </div>
    </section>

    {/* Skills Section */}
    <section
      id="skills"
      class="py-20 bg-gradient-to-br from-base-200 to-base-300"
    >
      <div class="container mx-auto px-6 pt-2 pb-12">
        {/* Section Header */}
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold text-base-content mb-4">
            What I <span class="text-primary">Know</span>
          </h2>
        </div>
        {/* Skills Grid */}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          <Skill
            skillcategory="Frontend"
            skillname="Html, CSS, Javascript, TypeScript, TailwindCSS, React, Next.js"
          />
          <Skill
            skillcategory="Backend"
            skillname="Python, Django, PostgreSQL, SQLite"
          />
          <Skill
            skillcategory="Tools & Others"
            skillname="Git, Cloud, VScode, Linux "
          />
        </div>
      </div>

      {/* Contact Section */}
      <section id="contact" class="py-20 bg-base-100">
        <div class="container mx-auto px-6 pt-2 pb-4">
          {/* Section Header */}
          <div class="text-center mb-16">
            <h2 class="text-4xl lg:text-5xl font-bold text-base-content mb-4">
              Let's <span class="text-primary">Connect</span>
            </h2>
          </div>
          {/* Contact Content */}
          <div class="flex flex-col items-center space-y-8">
            <div class="card bg-base-300 w-96 shadow-xl">
              <figure class="px-10 pt-10">
                <svg
                  width="48px"
                  height="48px"
                  viewBox="0 0 24 24"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                  class="text-primary"
                >
                  <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M4 4.25C2.48122 4.25 1.25 5.48122 1.25 7V17C1.25 18.5188 2.48122 19.75 4 19.75H20C21.5188 19.75 22.75 18.5188 22.75 17V7C22.75 5.48122 21.5188 4.25 20 4.25H4ZM7.4301 8.38558C7.09076 8.14804 6.62311 8.23057 6.38558 8.5699C6.14804 8.90924 6.23057 9.37689 6.5699 9.61442L11.5699 13.1144C11.8281 13.2952 12.1719 13.2952 12.4301 13.1144L17.4301 9.61442C17.7694 9.37689 17.852 8.90924 17.6144 8.5699C17.3769 8.23057 16.9092 8.14804 16.5699 8.38558L12 11.5845L7.4301 8.38558Z"
                    fill="currentColor"></path>
                </svg>
              </figure>
              <div class="card-body items-center text-center">
                <h2 class="card-title text-2xl font-semibold">Email</h2>
                <p class="text-lg text-base-content/70">
                  jaruvit.rpg@gmail.com
                </p>
                <div class="card-actions justify-center mt-4">
                  <a
                    href="mailto:jaruvit.rpg@gmail.com"
                    class="btn btn-primary btn-lg rounded-full px-8 hover:scale-105 transition-all duration-300"
                  >
                    <svg
                      class="w-5 h-5 mr-2"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M20 4H4C2.9 4 2 4.9 2 6V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4M20 8L12 13L4 8V6L12 11L20 6V8Z"
                      ></path>
                    </svg>
                    Send Email
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </section>
  </main>

  <script>
    document.addEventListener("astro:page-load", () => {
      const observerOptions = {
        threshold: 0.1,
        rootMargin: "0px 0px -50px 0px",
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = "1";
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);

      const elementsToObserve = document.querySelectorAll(".animate-on-load");
      elementsToObserve.forEach((element) => {
        observer.observe(element);
      });
    });
  </script>
</Layout>
