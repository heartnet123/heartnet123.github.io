---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Skill from '../components/Skill.astro';

---

<Layout>
	<main class="">
        {/* Hero Section */}
		<section id="about" class="relative overflow-hidden">
  <div class="hero min-h-screen bg-gradient-to-br from-primary/20 via-base-200 to-secondary/20">
    {/* Background Pattern */}
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0 bg-grid-pattern"></div>
    </div>
    
    {/* Floating Elements */}
    <div class="absolute top-20 left-10 w-72 h-72 bg-primary/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-secondary/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
    
    <div class="hero-content flex-col lg:flex-row-reverse gap-12 max-w-7xl mx-auto px-6 z-10 relative">
      {/* Image Section */}
      <div class="flex-1 flex justify-center lg:justify-end">
        <div class="relative group">
          <div class="absolute -inset-4 bg-gradient-to-r from-primary to-secondary rounded-2xl blur-lg opacity-50 group-hover:opacity-75 transition-opacity duration-300"></div>
          <div class="relative bg-base-100 rounded-2xl p-1 shadow-2xl">
            <img
              src="https://i.pinimg.com/736x/32/8f/a4/328fa4b617beebee4a272b9f4c4f0965.jpg"
              alt="Profile"
              class="w-80 h-80 object-cover rounded-xl shadow-lg"
            />
          </div>
          {/* Floating Icons */}
          <div class="absolute -top-4 -right-4 bg-primary text-primary-content p-3 rounded-full shadow-lg animate-bounce">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L2 7V10C2 16 6 20.5 12 22C18 20.5 22 16 22 10V7L12 2Z"/>
            </svg>
          </div>
          <div class="absolute -bottom-4 -left-4 bg-secondary text-secondary-content p-3 rounded-full shadow-lg animate-bounce delay-500">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9.5 3A6.5 6.5 0 0 1 16 9.5C16 11.11 15.41 12.59 14.44 13.73L14.71 14H15.5L20.5 19L19 20.5L14 15.5V14.71L13.73 14.44C12.59 15.41 11.11 16 9.5 16A6.5 6.5 0 0 1 3 9.5A6.5 6.5 0 0 1 9.5 3M9.5 5C7 5 5 7 5 9.5S7 14 9.5 14S14 12 14 9.5S12 5 9.5 5Z"/>
            </svg>
          </div>
        </div>
      </div>
      
      {/* Content Section */}
      <div class="flex-1 text-center lg:text-left space-y-8">
        {/* Greeting */}
        <div class="space-y-2">
          <p class="text-lg font-medium tracking-wide text-primary">Hi ðŸ‘‹</p>
          <h1 class="text-5xl lg:text-6xl font-bold leading-tight">I'm <span class="text-primary">Earth</span></h1>
          <h2 class="text-xl lg:text-2xl text-base-content/80 font-light">Full Stack Developer</h2>
        </div>
        
        {/* Description */}
        <p class="text-xl text-base-content/70 leading-relaxed max-w-2xl">
          I'm Passionate Developer building modern web applications
        </p>
        
        {/* Buttons */}
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <button class="btn btn-primary btn-lg rounded-full px-8 hover:scale-105 transition-all duration-300 shadow-lg">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 4H4C2.9 4 2 4.9 2 6V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4M20 8L12 13L4 8V6L12 11L20 6V8Z"/>
            </svg>
            Contact  
          </button>
           <a href="#project" class="flex items-center">
          <button class="btn btn-outline btn-lg rounded-full px-8 hover:scale-105 transition-all duration-300">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14,3V5H17.59L7.76,14.83L9.17,16.24L19,6.41V10H21V3M19,19H5V5H12V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V12H19V19Z"/>
            </svg>
            My Projects
          </button>
           </a>
        </div>
	</section>

		{/* Project Section */}
		<section id="project">
		<div class="hero bg-base-600 pt-2 pb-12">
			<div class="hero-content text-center w-full">
			  <div class="flex flex-wrap justify-center w-full">
				<h1 class="text-5xl font-bold py-12">My Projects</h1>
					{/* Card Section */}
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto py-16 lg:py-20">
				
				<Card name="NextMart" desc="E-Commerce platform built with Next.js and Django, featuring modern UI and JWT authentication method." skill1="Next.js" skill2="Django" skill3="SQLite" github="https://github.com/heartnet123/ecommerce-nextmart"/>
				<Card name="BookCube" desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit." skill1="Django" skill2="PostgreSQL" github="https://github.com/heartnet123/ecommerce-nextmart"/>
				<Card name="Inventory Management" desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit." skill1="Tauri" skill2="SvelteKit" skill3="SQLite" github="https://github.com/heartnet123/ecommerce-nextmart"/>
				
			</div>

			 </div>
		  </div>
		</section>

	{/* Skills Section */}
		<section id="skills" class="py-20 bg-gradient-to-br from-base-200 to-base-300">
        <div class="container mx-auto px-6 pt-2 pb-12">
            {/* Section Header */}
            <div class="text-center mb-16">
                <h2 class="text-4xl lg:text-5xl font-bold text-base-content mb-4">
                    What I <span class="text-primary">Know</span>
                </h2>
            </div>
            {/* Skills Grid */}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 ">
                <Skill skillcategory="Frontend" skillname="Html, CSS, Javascript, TypeScript, TailwindCSS, React, Next.js"/>
                <Skill skillcategory="Backend" skillname="Python, Django, PostgreSQL, SQLite"/>
                <Skill skillcategory="Tools & Others" skillname="Git, Cloud, VScode, Linux "/>
            </div>

		</section>

		{/* Contact Section */}
    <section id="contact" class="py-20 bg-base-100">
      <div class="container mx-auto px-6 pt-2 pb-4">
        {/* Section Header */}
        <div class="text-center mb-16">
            <h2 class="text-4xl lg:text-5xl font-bold text-base-content mb-4">
                Contact <span class="text-primary">Me</span>
            </h2>
        </div>
        {/* Contact Detail */}
        <div class="text-center space-y-6 text-4xl lg:text-5xl font-bold">
            <div class="flex items-center justify-center gap-4 mb-6">
                <svg width="48px" height="48px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-primary">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M4 4.25C2.48122 4.25 1.25 5.48122 1.25 7V17C1.25 18.5188 2.48122 19.75 4 19.75H20C21.5188 19.75 22.75 18.5188 22.75 17V7C22.75 5.48122 21.5188 4.25 20 4.25H4ZM7.4301 8.38558C7.09076 8.14804 6.62311 8.23057 6.38558 8.5699C6.14804 8.90924 6.23057 9.37689 6.5699 9.61442L11.5699 13.1144C11.8281 13.2952 12.1719 13.2952 12.4301 13.1144L17.4301 9.61442C17.7694 9.37689 17.852 8.90924 17.6144 8.5699C17.3769 8.23057 16.9092 8.14804 16.5699 8.38558L12 11.5845L7.4301 8.38558Z" fill="currentColor"></path>
                </svg>
                <p class="text-xl text-base-content/70">
                    <span class="font-semibold">Email:</span> 
                    <a href="mailto:jaruvit.rpg@gmail.com" class="text-primary hover:text-primary-focus transition-colors duration-200 underline decoration-primary/30 hover:decoration-primary">
                        jaruvit.rpg@gmail.com
                    </a>
                </p>
            </div>
            </div>
        </div>
      </div>
    </section>
	</main>
</Layout>
