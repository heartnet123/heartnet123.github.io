---
import Layout from "../layouts/Layout.astro";

const posts = [
    {
        title: "Getting Started with Astro",
        date: "2025-10-15",
        description: "Learn how to build fast websites with Astro.",
        slug: "getting-started-with-astro",
        tags: ["Astro", "Web Development"],
    },
    {
        title: "Why I Love Tailwind CSS",
        date: "2025-11-02",
        description: "A deep dive into why utility-first CSS is the future.",
        slug: "why-i-love-tailwind-css",
        tags: ["CSS", "Tailwind"],
    },
    {
        title: "The Future of React",
        date: "2025-12-10",
        description:
            "Exploring Server Components and the latest React features.",
        slug: "the-future-of-react",
        tags: ["React", "JavaScript"],
    },
    {
        title: "Building Accessible Web Apps",
        date: "2024-01-05",
        description:
            "Best practices for making your web applications accessible to everyone.",
        slug: "building-accessible-web-apps",
        tags: ["Accessibility", "Web Design"],
    },
    {
        title: "Mastering TypeScript",
        date: "2024-02-20",
        description: "Tips and tricks to level up your TypeScript skills.",
        slug: "mastering-typescript",
        tags: ["TypeScript", "Programming"],
    },
];
---

<Layout>
    <div class="min-h-screen bg-base-200 pt-24 px-6 pb-12">
        <div class="container mx-auto max-w-4xl">
            <h1 class="text-5xl font-bold text-primary mb-8">Blog</h1>
            <div class="grid gap-6">
                {
                    posts.map((post) => (
                        <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 border border-base-300">
                            <div class="card-body">
                                <h2 class="card-title text-2xl text-secondary">
                                    {post.title}
                                </h2>
                                <div class="flex gap-2 my-2">
                                    {post.tags.map((tag) => (
                                        <span class="badge badge-accent badge-outline">
                                            {tag}
                                        </span>
                                    ))}
                                </div>
                                <p class="text-base-content/80">
                                    {post.description}
                                </p>
                                <div class="card-actions justify-end items-center mt-4">
                                    <span class="text-sm text-base-content/60 mr-auto">
                                        {post.date}
                                    </span>
                                    <button class="btn btn-primary btn-sm">
                                        Read More
                                    </button>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</Layout>
