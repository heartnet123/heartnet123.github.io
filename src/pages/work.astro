---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="min-h-screen bg-base-200 pt-24 px-6">
        <div class="container mx-auto max-w-4xl">
            <h1 class="text-5xl font-bold text-primary mb-8">
                Work Experience
            </h1>

            <div class="space-y-8">
                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h2 class="card-title text-2xl">Senior Developer</h2>
                        <p class="text-sm text-base-content/60">
                            Tech Corp • 2023 - Present
                        </p>
                        <p class="mt-4">
                            Leading development of core platform features...
                        </p>
                    </div>
                </div>

                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h2 class="card-title text-2xl">Web Developer</h2>
                        <p class="text-sm text-base-content/60">
                            StartUp Inc • 2021 - 2023
                        </p>
                        <p class="mt-4">
                            Built and maintained client-facing applications...
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
