---
import "../assets/app.css";

export interface Props {
  name: string;
  desc?: string; 
  skill1?: string;
  skill2?: string;
  skill3?: string;
  github?: string;
}

const {name, desc, skill1, skill2, skill3, github} = Astro.props;

const skills = [skill1, skill2, skill3].filter(skill => skill);

---
<div class="card bg-base-200 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border-r-4 border-primary">
    <div class="card-body">
      <h3 class="card-title text-xl font-bold">{name}</h3>
        <p class="text-base-content/70 mb-4">{desc}</p>

  {skills.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {skills.map((skill) => (
        <div class="badge badge-primary">{skill}</div>
      ))}
    </div>
  )}

  <div class="card-actions justify-start mt-4">
    <a href={github} target="_blank" class="btn btn-primary">
      View Project
    </a>
  </div>
</div>
    </div>
</div>