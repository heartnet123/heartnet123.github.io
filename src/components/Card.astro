---
import "../assets/app.css";

export interface Props {
  name: string;
  desc?: string;
  skill1?: string;
  skill2?: string;
  skill3?: string;
  github?: string;
  image?: string;
}

const { name, desc, skill1, skill2, skill3, github, image } = Astro.props;

const skills = [skill1, skill2, skill3].filter((skill) => skill);
---

<a href={github} target="_blank" class="block group">
  <div
    class="bg-[#111] rounded-2xl overflow-hidden border border-white/5 hover:border-white/10 transition-all duration-300 hover:-translate-y-1"
  >
    {/* Image Container */}
    <div class="relative h-48 overflow-hidden">
      {
        image && (
          <img
            src={image}
            alt={name}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
          />
        )
      }
      <div
        class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors duration-300"
      >
      </div>
    </div>

    {/* Content */}
    <div class="p-6 space-y-4">
      <h3
        class="text-xl font-bold text-white group-hover:text-green-400 transition-colors"
      >
        {name}
      </h3>

      <p class="text-gray-400 text-sm leading-relaxed line-clamp-2">
        {desc}
      </p>

      {/* Tags */}
      {
        skills.length > 0 && (
          <div class="flex flex-wrap gap-2 pt-2">
            {skills.map((skill) => (
              <span class="px-3 py-1 text-xs font-mono text-gray-300 bg-white/5 border border-white/10 rounded-md">
                {skill}
              </span>
            ))}
          </div>
        )
      }
    </div>
  </div>
</a>
